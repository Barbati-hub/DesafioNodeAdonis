@section('scripts')
<script>
  async function atualizarProduto(id) {
    const nome = document.getElementById("nome").value;
    const descricao = document.getElementById("descricao").value;
    const preco = document.getElementById("preco").value;
    const quantidade = document.getElementById("quantidade").value;
    
    try {
      const response = await fetch(`/produtos/${id}`, {
        method: "PUT",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ nome, descricao, preco, quantidade })
      });

      const result = await response.json();

      if (response.ok) {
        document.getElementById("mensagem").textContent = "‚úÖ Produto atualizado com sucesso!";
        document.getElementById("mensagem").classList.remove("hidden");
        setTimeout(() => {
          window.location.href = "/produtos"; // Redireciona para a lista
        }, 1500);
      } else {
        document.getElementById("mensagem").textContent = "‚ùå Erro ao atualizar o produto.";
        document.getElementById("mensagem").classList.add("text-red-500");
        document.getElementById("mensagem").classList.remove("hidden");
      }
    } catch (error) {
      document.getElementById("mensagem").textContent = "‚ùå Erro ao conectar com o servidor.";
      document.getElementById("mensagem").classList.add("text-red-500");
      document.getElementById("mensagem").classList.remove("hidden");
    }
  }
</script>
